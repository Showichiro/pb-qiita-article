    "hono": "^4.10.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@cloudflare/workers-types": "^4.20250506.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.19.1",
    "@tailwindcss/postcss": "^4.1.10",
    "bun-types": "^1.2.17",
    "daisyui": "^5.0.43",
    "drizzle-kit": "^0.31.1",
    "miniflare": "^4.20250428.1",
    "postcss": "^8.5.5",
    "tailwindcss": "^4.1.10",
