{
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "$npm_execpath run build && wrangler pages deploy dist",
    "schema:gen": "drizzle-kit generate:sqlite --out migrations --schema src/db/schema.ts",
    "format": "biome format src/ --write",
    "lint": "biome lint src/ --fix",
    "schema:apply": "wrangler d1 migrations apply pb-qiita-articles",
    "test": "vitest",
    "test:ci": "vitest --bail 1 --silent --run"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.4",
    "@hono/zod-validator": "^0.4.3",
    "drizzle-orm": "^0.32.2",
    "hono": "^4.7.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.13.1",
    "@tailwindcss/postcss": "^4.0.7",
    "bun-types": "^1.2.2",
    "daisyui": "^5.0.0-beta.8",
    "drizzle-kit": "^0.30.4",
    "miniflare": "^3.20250214.0",
    "postcss": "^8.5.2",
    "tailwindcss": "^4.0.7",
    "vite": "^6.1.0",
    "vitest": "^3.0.6",
    "wrangler": "^3.109.2"
  }
